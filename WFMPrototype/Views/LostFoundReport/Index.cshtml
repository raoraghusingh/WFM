
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<section class="content-header">
    <h1>
        Lost & Found Report

    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>

        <li class="active">Lost & Found Report</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">

                    <li class="active"><a href="#glyphicons" data-toggle="tab">Lost & Found Report</a></li>
                </ul>
                <div class="tab-content">
                    <!-- Font Awesome Icons -->
                    <!-- /#fa-icons -->
                    <!-- glyphicons-->
                    <div class="tab-pane active" id="glyphicons">
                        <form id="LostFoundreportform" class="form-horizontal">
                            <div class="form-group">
                                <label for="txtfromdate" class="col-sm-2 control-label">From Date</label>
                                <div class="col-sm-10">
                                    <input type="date" class="form-control" id="txtfromdate" name="txtfromdate" placeholder="Date">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txttodate" class="col-sm-2 control-label">To Date</label>
                                <div class="col-sm-10">
                                    <input type="date" class="form-control" id="txttodate" name="txttodate" placeholder="Date">
                                </div>
                            </div>
                     
                            <div class="form-group">

                                <label for="inputEmail3" id="" name="" class="col-sm-2 control-label">Company Name</label>
                                <div class="col-sm-10">
                                    <select id="ddlcompanyname" name="ddlcompanyname" class="form-control"></select>
                                </div>
                            </div>
                            <div class="box-footer">
                                <button type="submit" class="btn btn-info pull-right" style="margin-left:10px">Submit</button>
                                <button type="button" onclick="Cancel()" class="btn btn-info pull-right">Cancel</button>

                            </div>
                        </form>
                        <br /><br />
                        <div class="table-responsive tab-pane" id="glyphicons">
                            <table id="tbllostfoundreport" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Company Name</th>
                                        <th>Founder Name</th>
                                        <th>Item Name</th>
                                        <th>Comments</th>                                 
                                        <th>Date</th>

                                    </tr>
                                </thead>

                            </table>
                            </div>
                        </div>
                    <!-- /#ion-icons -->
                </div>
                <!-- /.tab-content -->
            </div>
            <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<script src="~/JS/LostFoundReport/LostFoundReport.js"></script>

