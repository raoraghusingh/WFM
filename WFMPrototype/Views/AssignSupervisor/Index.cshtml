
@{
    ViewBag.Title = "Assign Supervisor";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
       Assign Supervisor

    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>

        <li class="active">Assign Supervisor</li>
    </ol>
</section>
<!-- Main content -->

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#fa-icons" id="addcompany" data-toggle="tab"><span id="spantext"></span></a></li>
                    <li><a href="#glyphicons" data-toggle="tab">Assign Supervisor List</a></li>
                </ul>
                <div class="tab-content">
                    <!-- Font Awesome Icons -->
                    <div class="tab-pane active" id="fa-icons">

                        <!-- Horizontal Form -->
                        <!-- /.box-header -->
                        <!-- form start -->
                        <form class="form-horizontal" id="checklistform">
                            <div class="box-body">
                                <div class="form-group">
                                    <input type="hidden" id="hdnchecklistid" value="0" />
                                    <label for="ddlcompanyname" class="col-sm-2 control-label">Company Name</label>
                                    <div class="col-sm-10">
                                        @*<input type="text" class="form-control" name="txtcompanyname" id="txtcompanyname" placeholder="Company Name">*@
                                        <select id="ddlcompanyname" name="ddlcompanyname" class="form-control"></select>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="txtworkname" class="col-sm-2 control-label">Supervisor Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="txtworkname" name="txtworkname" placeholder="Work Name" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="txtworkinterval" class="col-sm-2 control-label">Shift Time</label>
                                    <div class="col-sm-10">
                                        <select id="ddlshifttime" name="ddlcompanyname" class="form-control"></select>
                                       
                                    </div>
                                </div>
                                

                            </div>
                            <!-- /.box-body -->
                            <div class="box-footer">
                                <button type="submit" class="btn btn-info pull-right" style="margin-left:10px">Submit</button>

                                <button type="submit" class="btn btn-info pull-right">Cancel</button>

                            </div>
                            <!-- /.box-footer -->
                        </form>
                        <!-- /.box -->


                    </div>
                    <!-- /#fa-icons -->
                    <!-- glyphicons-->
                    <div class="tab-pane" id="glyphicons">
                        <table id="tblchecklist" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Company Name</th>
                                    <th>Work Name</th>
                                    <th>Work Interval</th>
                                    <th>Sift Name</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>

                        </table>
                    </div>
                    <!-- /#ion-icons -->
                </div>
                <!-- /.tab-content -->
            </div>
            <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<script src="~/JS/CheckList/Checklist.js"></script>