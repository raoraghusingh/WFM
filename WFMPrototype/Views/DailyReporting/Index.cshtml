
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<section class="content-header">
    <h1>
        Daily Reporting

    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>

        <li class="active">Manage Daily Reporting</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a id="DailyReportL" href="#fa-icons" data-toggle="tab"><span id="spantext"></span></a></li>
                    <li><a href="#glyphicons" data-toggle="tab">Daily Reporting List</a></li>
                </ul>
                <div class="tab-content">
                    <!-- Font Awesome Icons -->
                    <div class="tab-pane active" id="fa-icons">

                        <!-- Horizontal Form -->
                        <!-- /.box-header -->
                        <!-- form start -->
                        <form id="dailyreportingform" class="form-horizontal">
                            <div class="box-body">
                                <div class="form-group">
                                    <input type="hidden" id="hdndailyreporting" value="0" />
                                    <input type="hidden" id="hdndailyreportingID" value="0" />
                                    <label for="inputEmail3" id="" name="" class="col-sm-2 control-label">Company Name</label>
                                    <div class="col-sm-10">
                                        <select id="ddlcompanyname" name="ddlcompanyname" class="form-control"></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3" id="" name="" class="col-sm-2 control-label">Worker Name</label>
                                    <div class="col-sm-10">
                                        <select id="ddlworkername" name="ddlworkername" class="form-control"></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail3" id="" name="" class="col-sm-2 control-label">Shift Time</label>
                                    <div class="col-sm-10">
                                        <select id="ddlshift" name="ddlshift" class="form-control"></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail3" id="lblchecklist" name="" class="col-sm-2 control-label">Checklist</label>
                                    <div id="chkchecklist" class="col-sm-10">
                                      
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="txtdate" class="col-sm-2 control-label">Date</label>
                                    <div class="col-sm-10">
                                        <input type="date" class="form-control" id="txtdate" name="txtdate" placeholder="Date">
                                    </div>
                                </div>


                            </div>
                            <!-- /.box-body -->
                            <div class="box-footer">
                                <button type="submit" class="btn btn-info pull-right" style="margin-left:10px">Submit</button>
                                <button type="button" onclick="Cancel()" class="btn btn-info pull-right">Cancel</button>

                            </div>
                            <!-- /.box-footer -->
                        </form>

                        <!-- /.box -->


                    </div>
                    <!-- /#fa-icons -->
                    <!-- glyphicons-->
                    <div class="tab-pane" id="glyphicons">
                        <table id="tblDailyReporting" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Company Name</th>
                                    <th>Worker Name</th>
                                    <th>Shift Time</th>
                                    <th>Checklist</th>
                                    <th>Date</th>
                                    <th></th>
                                    
                                </tr>
                            </thead>

                        </table>
                    </div>
                    <!-- /#ion-icons -->
                </div>
                <!-- /.tab-content -->
            </div>
            <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<script src="~/JS/DailyReporting/DailyReporting.js"></script>

